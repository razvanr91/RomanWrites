@model RomanWrites.Models.Blog

@{
    ViewData["Title"] = "Create";
    string link = @"https://unsplash.com/@andrewtneel?utm_source=unsplash&utm_medium=referral&utm_content=creditCopyText";
}
<p class="text-end small mt-0 text-muted fs-6">
    Photo by <a href="@link" class="text-decoration-none text-muted fst-italic" target="_blank">Andrew Neel</a> on 
    <a class="text-decoration-none text-muted fst-italic" href="https://unsplash.com/s/photos/blog?utm_source=unsplash&utm_medium=referral&utm_content=creditCopyText" target="_blank">
        Unsplash
    </a>
</p>
<div class="container w-50">
    <div class="row justify-content-center">
        <hr />
        <div class="row">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
                <div class="form-group my-2">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
    
                <div class="form-group my-2">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" id="summernote"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
    
                <div class="form-group my-2">
                    <label asp-for="Image" class="control-label"></label>
                    <input type="file" asp-for="Image" class="form-control" accept=".jpg, .png, .jpeg, .gif, .svg" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
    
                <div class="form-group my-2">
                    <input type="submit" value="Create" class="btn btn-primary rounded-pill" />
                </div>
    
            </form>
        </div>
    
        <div class="my-2">
            <a asp-action="Index" asp-controller="Home">Back Home</a>
        </div>
    </div>
</div>



@section Scripts {
    <script>
        $('#summernote').summernote({
            placeholder: "Enter your message here",
            tabsize: 2,
            height: 220,
            toolbar: [
                ['style', ['style']],
                ['font', ['bold', 'underline', 'clear']],
                ['color', ['color']],
                ['para', ['ul', 'ol', 'paragraph']],
                ['table', ['table']],
                ['insert', ['link', 'picture', 'video']],
                ['view', ['fullscreen', 'codeview', 'help']]
            ]
        });
    </script>
}